<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.a1l1.fragments.CitiesFragment"
        android:label="Города"
        tools:layout="@layout/fragment_cities_list">
        <action
            android:id="@+id/action_nav_home_to_nav_weather"
            app:destination="@id/nav_weather" />
    </fragment>

    <fragment
        android:id="@+id/nav_weather"
        android:name="com.example.a1l1.fragments.WeatherFragment"
        android:label="Прогноз погоды"
        tools:layout="@layout/activity_weather" />

    <fragment
        android:id="@+id/nav_history"
        android:name="com.example.a1l1.fragments.HistoryListFragment"
        android:label="История"
        tools:layout="@layout/fragment_history_list" />

    <fragment
        android:id="@+id/nav_about"
        android:name="com.example.a1l1.fragments.AboutFragment"
        android:label="О приложении"
        tools:layout="@layout/activity_about" />

</navigation>